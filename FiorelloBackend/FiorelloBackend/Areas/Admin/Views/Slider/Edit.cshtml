@model SliderEditVM

@{
    ViewData["Title"] = "Edit";
}


<div class="container mt-5">
    <div class="image">
        <img src="~/img/@Model.Image" style="width:70%; height:30%" />
    </div>
    <form class="forms-sample" asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Photo">Image</label>
            <input asp-for="Photo" class="form-control">
            <span asp-validation-for="Photo"></span>
        </div>

        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <a class="btn btn-light" asp-action="Index">Back</a>
    </form>
</div>


