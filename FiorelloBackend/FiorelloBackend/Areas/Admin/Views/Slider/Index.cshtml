@model List<SliderVM>
@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <h1 class="text-center mt-3 mb-3">Sliders</h1>
    <a class="btn btn-success" asp-action="Create">Create</a>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Operations
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="py-1">
                            <img src="~/img/@item.Image" alt="image" />
                        </td>
                        <td>
                            <form method="post" asp-action="ChangeStatus" asp-route-id="@item.Id">
                                
                                @if (item.Status)
                                {
                                    <button type="submit" style="width:20px; height:20px; background-color:#00ff00;border-radius:50%;outline:none; border:none" class="status-true"></button>
                                }
                                else
                                {
                                    <button type="submit" style="width:20px; height:20px; background-color:red;border-radius:50%;outline:none; border:none" class="status-false"></button>
                                }
                            </form>
                            
                            
                            
                        </td>

                        <td>
                            <a class="btn btn-info" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <form class="d-inline-block" method="post" asp-action="Delete" asp-route-id="@item.Id">
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

